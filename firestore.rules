rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Quyền truy cập cho collection exercises
    match /exercises/{exerciseId} {
      // Cho phép đọc bài tập cho tất cả người dùng
      allow read: if true;
      
      // Chỉ cho phép người dùng đã đăng nhập tạo bài tập mới
      allow create: if request.auth != null && 
                     request.resource.data.authorId == request.auth.uid;
      
      // Chỉ cho phép tác giả hoặc admin cập nhật/xóa bài tập
      allow update: if request.auth != null && 
                     (resource.data.authorId == request.auth.uid || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      
      // Cho phép cập nhật mảng solutions (để thêm lời giải)
      allow update: if request.auth != null;
      
      allow delete: if request.auth != null && 
                     (resource.data.authorId == request.auth.uid || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    
    // Quyền truy cập cho collection users
    match /users/{userId} {
      // Cho phép đọc thông tin người dùng cho tất cả người dùng
      allow read: if true;
      
      // Cho phép tạo và cập nhật thông tin người dùng
      allow write: if request.auth != null;
    }
    
    // Quyền truy cập cho collection leaderboard
    match /leaderboard/{entryId} {
      // Cho phép đọc bảng xếp hạng cho tất cả người dùng
      allow read: if true;
      
      // Cho phép người dùng đã đăng nhập cập nhật bảng xếp hạng
      allow write: if request.auth != null;
    }
  }
}